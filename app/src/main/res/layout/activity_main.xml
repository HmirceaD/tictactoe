<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maruta.connect3revi.MainActivity">

    <ImageView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="board"
        app:srcCompat="@drawable/board" />

    <ImageView
        android:id="@+id/g12"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/g11"
        android:layout_centerHorizontal="true"
        android:contentDescription="grid12"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g13"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/g12"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g21"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g22"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/g21"
        android:layout_toStartOf="@+id/g23"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g23"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/g22"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g31"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/g21"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/g12"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g11"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playerView"
        android:layout_marginTop="27dp"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g32"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/g33"
        android:layout_toStartOf="@+id/g33"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/g33"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/g31"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/winView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Reset" />
</RelativeLayout>
